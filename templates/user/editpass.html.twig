{% extends 'client/layout_client.html.twig' %}

{% block title %}Modification du mot de passe de {{ app.user.username }}{% endblock %}

{% block body %}
    <div class="grix xs4 container">
        {% for message in app.flashes('error') %}
            <div class="col-xs4">
                <div class="alert alert-warning">{{message}}</div>
            </div>
        {% endfor %}
        <div class="col-xs4">
            <h1>Modification du mot de passe de {{ app.user.username }}</h1>
            <form method="post">
                <div class="form-field">
                    <label for="pass">Mot de passe</label>
                    <input type="password" id="pass" name="pass" class="form-control">
                </div><br>
                <div class="form-field">
                    <label for="pass2">Confirmer le mot de passe</label>
                    <input type="password" id="pass2" name="pass2" class="form-control">
                </div><br>
                <button class="btn btn-success">Valider</button>

            </form>
        </div>

    </div>
{% endblock %}