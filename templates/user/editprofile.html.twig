{% extends 'client/layout_client.html.twig' %}

{% block title %}Modification du profil de {{ app.user.username }}{% endblock %}

{% block body %}
    <div class="grix xs4 container">
        <div class="col-xs4">
            <h1>Modification du profil de {{ app.user.username }}</h1>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.username,{'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email,{'attr':{'class':'form-control'}}) }}
            </div>
           <br>
            <button class="btn btn-success" type="submit">Valider</button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}