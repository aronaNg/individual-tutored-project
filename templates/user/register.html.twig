{% extends 'client/layout_client.html.twig' %}
{% block body %}
    <div class="container">
        <h1 class="my-3">Cr√©er votre compte </h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.username,{'attr':{'class':'form-control mb-3'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email,{'attr':{'class':'form-control mb-3'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.plainPassword.first,{'attr':{'class':'form-control mb-3'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.plainPassword.second,{'attr':{'class':'form-control'}}) }}
        </div><br><br>
        <button class="btn btn-success" type="submit">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}